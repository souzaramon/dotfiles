      },
      "string.escape": {
        "color": "#ffffff"
      },
      "string.regex": {
        "color": "#ffffff"
      },
      "string.special": {
        "color": "#ffffff"
      },
      "string.special.symbol": {
        "color": "#ffffff"
      },
      "tag": {
        "color": "#ffffff"
      },
      "text.literal": {
        "color": "#ffffff"
      },
      "title": {
        "color": "#ffffff"
      },
      "type": {
        "color": "#ffffff"
      },
      "variable": {
        "color": "#ffffff"
      },
      "variable.special": {
        "color": "#ffffff"
      },
      "variant": {
        "color": "#ffffff"
      }
    }
  }
}
